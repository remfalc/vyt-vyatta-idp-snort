multi:

type: txt

help: Set rule category to exclude

allowed: sudo ${vyatta_sbindir}/vyatta-modify-sids.pl \
                --action="show-categories"            \
                --ruledir=/etc/snort/rules

create: sudo ${vyatta_sbindir}/vyatta-modify-sids.pl           \
                 --action=add-item                             \
                 --file=${vyatta_sysconfdir}/ips/exclude-rules \
                 --value="$VAR(@)"

        if [ "$COMMIT_SIBLING_POSITION" = "LAST" ] || \
           [ "$COMMIT_SIBLING_POSITION" = "FIRSTLAST" ] ; then
           sudo ${vyatta_sbindir}/vyatta-modify-sids.pl \
                --action=update-exclude                 \
                --conffile=/etc/snort/ips.conf          \
                --file=${vyatta_sysconfdir}/ips/exclude-rules
           fi;

delete: sudo ${vyatta_sbindir}/vyatta-modify-sids.pl           \
                 --action=del-item                             \
                 --file=${vyatta_sysconfdir}/ips/exclude-rules \
                 --value="$VAR(@)"

        if [ "$COMMIT_SIBLING_POSITION" = "LAST" ] || \
           [ "$COMMIT_SIBLING_POSITION" = "FIRSTLAST" ] ; then
           sudo ${vyatta_sbindir}/vyatta-modify-sids.pl \
                --action=update-exclude                 \
                --conffile=/etc/snort/ips.conf          \
                --file=${vyatta_sysconfdir}/ips/exclude-rules
        fi;
