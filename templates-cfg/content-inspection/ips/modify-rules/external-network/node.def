multi:

type: ipv4,ipv4net

help: Set network as external-network

create: sudo ${vyatta_sbindir}/vyatta-modify-sids.pl --action=add-item \
                 --file=${vyatta_sysconfdir}/ips/external-net          \
                 --value="$VAR(@)"

        if [ "$COMMIT_SIBLING_POSITION" = "LAST" ] || \
           [ "$COMMIT_SIBLING_POSITION" = "FIRSTLAST" ] ; then
           sudo ${vyatta_sbindir}/vyatta-modify-sids.pl \
                --action=update-external-net            \
                --conffile=/etc/snort/ips.conf          \
                --file=${vyatta_sysconfdir}/ips/external-net
        fi;

delete: sudo ${vyatta_sbindir}/vyatta-modify-sids.pl --action=del-item \
                 --file=${vyatta_sysconfdir}/ips/external-net          \
                 --value="$VAR(@)"

        if [ "$COMMIT_SIBLING_POSITION" = "LAST" ] || \
           [ "$COMMIT_SIBLING_POSITION" = "FIRSTLAST" ] ; then
           sudo ${vyatta_sbindir}/vyatta-modify-sids.pl \
                --action=update-external-net            \
                --conffile=/etc/snort/ips.conf          \
                --file=${vyatta_sysconfdir}/ips/external-net
        fi;
