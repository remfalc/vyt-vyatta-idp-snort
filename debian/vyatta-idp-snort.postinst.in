#!/bin/bash

prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@
bindir=@bindir@
sbindir=@sbindir@

mkdir -p /opt/vyatta/etc/ips
mkdir -p /opt/vyatta/etc/config/ips/rules

if [ -f /opt/vyatta/etc/ips/snortrules-snapshot-2853.tar.gz ]; then
  cp -f /opt/vyatta/etc/ips/snortrules-snapshot-2853.tar.gz \
        /opt/vyatta/etc/config/ips/snortrules-snapshot-latest.tar.gz
fi
if [ -f /etc/snort/rules/local.rules ]; then
  cp -f /etc/snort/rules/local.rules \
        /opt/vyatta/etc/config/ips/rules/local.rules
fi

